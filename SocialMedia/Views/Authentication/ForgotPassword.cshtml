@using Models
@using Models.ViewModel.Users
@model ForgotPasswordModel

<div class="sm:flex">
    <div class="relative lg:w-[580px] md:w-96 w-full p-10 min-h-screen bg-white shadow-xl flex items-center pt-10 z-10">
        <div class="w-full lg:max-w-sm mx-auto space-y-10">
            <div>
                <h2 class="text-2xl font-semibold mb-1.5">Quên Mật khẩu</h2>
                <p class="text-sm text-gray-700 font-normal">Nhập địa chỉ email của bạn để nhận mã đặt lại mật khẩu (OTP).</p>
            </div>

            <form asp-controller="Authentication" asp-action="ForgotPassword" method="post" class="space-y-7 text-sm text-black font-medium">
                <div class="col-span-2 text-red-500" asp-validation-summary="ModelOnly"></div>

                <div>
                    <label asp-for="Email">Địa chỉ Email</label>
                    <div class="mt-2.5">
                        <input asp-for="Email" type="email" placeholder="Email" required class="!w-full" />
                        <span asp-validation-for="Email" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="button bg-primary text-white w-full">Gửi Mã OTP</button>
                </div>

                <div class="text-center">
                    <a asp-controller="Authentication" asp-action="Login" class="text-blue-700 hover:underline">Quay lại Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>

    <div class="flex-1 relative bg-primary max-md:hidden">
        <div class="relative w-full h-full" tabindex="-1" uk-slideshow="animation: slide; autoplay: true">

            <ul class="uk-slideshow-items w-full h-full">
                <li class="w-full">
                    <img src="~/images/welcome/welcome-03.png" alt="Bảo mật" class="w-full h-full object-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-center-left">

                    <div class="absolute bottom-0 w-full uk-transition-slide-bottom-small z-10">
                        <div class="max-w-xl w-full mx-auto pb-32 px-5 z-30 relative">
                            <h4 class="!text-white text-2xl font-semibold mt-7" uk-slideshow-parallax="y: 600,0,0">Bảo mật tài khoản</h4>
                            <p class="!text-white text-lg mt-7 leading-8" uk-slideshow-parallax="y: 800,0,0;">Luôn giữ an toàn cho mật khẩu của bạn. Quá trình đặt lại nhanh chóng và bảo mật tuyệt đối.</p>
                        </div>
                    </div>
                    <div class="w-full h-96 bg-gradient-to-t from-black absolute bottom-0 left-0"></div>
                </li>

                <li class="w-full">
                    <img src="~/images/welcome/welcome-04.png" alt="Kết nối" class="w-full h-full object-cover uk-animation-kenburns uk-animation-reverse uk-transform-origin-center-left">
                    <div class="absolute bottom-0 w-full uk-transition-slide-bottom-small z-10">
                        <div class="max-w-xl w-full mx-auto pb-32 px-5 z-30 relative">
                            <h4 class="!text-white text-2xl font-semibold mt-7" uk-slideshow-parallax="y: 800,0,0"> Kết nối với mọi người </h4>
                            <p class="!text-white text-lg mt-7 leading-8" uk-slideshow-parallax="y: 800,0,0;"> Đặt lại mật khẩu để tiếp tục kết nối với bạn bè và chia sẻ những khoảnh khắc đáng nhớ.</p>
                        </div>
                    </div>
                    <div class="w-full h-96 bg-gradient-to-t from-black absolute bottom-0 left-0"></div>
                </li>
            </ul>

            <div class="flex justify-center">
                <ul class="inline-flex flex-wrap justify-center absolute bottom-8 gap-1.5 uk-dotnav uk-slideshow-nav"> </ul>
            </div>

        </div>
    </div>
</div>