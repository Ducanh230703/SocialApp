                    <hr />
                    <nav>
                        <a asp-controller="User" asp-action="GetInfo" asp-route-userId="@(loggedInUser?.Data?.ID ?? 0)"
                           class="flex items-center gap-2.5 hover:bg-secondery p-2 px-2.5 rounded-md">
