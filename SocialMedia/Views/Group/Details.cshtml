﻿@using Models.ViewModel.GroupMember
@using Models.ViewModel.Home
@model Models.ResponseModels.GroupDetailResponseModel

@{
    ViewData["Title"] = @Model.GroupName;
}

<div class="container mx-auto p-4" style="width: 580px">
    <h1 class="text-3xl font-bold text-center mb-4">@Model.GroupName</h1>

    <div class="bg-white rounded-xl shadow-sm text-sm font-medium border1 mb-6">
        <div class="sm:p-4 p-2.5 text-center">
            <p class="text-gray-500">
                @Model.MemberCount thành viên
                @if (Model.IsPrivate)
                {
                    <i class="fas fa-lock text-gray-400 ml-1" title="Nhóm riêng tư"></i>
                }
            </p>

            <p class="text-xs text-gray-500 mt-1">
                Được tạo bởi:
                <a href="/User/Details?userId=@Model.CreatedByUserId" class="text-blue-500 hover:underline">
                    @Model.CreatedByUserName
                </a>
            </p>

            @* Nút xem thành viên chỉ hiển thị nếu người dùng là thành viên hoặc đang chờ duyệt (-1) *@
            @if (Model.CurrentUserRole != 3) @* Giả sử 3 là trạng thái chưa liên quan gì *@
            {
                <button onclick="openMembersModal('@Model.ID', '@Model.CurrentUserRole')"
                        class="bg-green-500 text-white py-2 px-6 rounded-full hover:bg-green-600 transition-colors ml-2 mt-4">
                    Xem thành viên
                </button>
            }

            <div class="mt-4">
                @switch (Model.CurrentUserRole)
                {
                    case -1: // Pending (Đang chờ duyệt)
                             <button onclick="handleGroupAction('@Model.ID', 'DELETE', 'Đã hủy yêu cầu tham gia nhóm')"
                                     class="bg-yellow-500 text-white py-2 px-6 rounded-full hover:bg-yellow-600 transition-colors">
                                 Hủy yêu cầu tham gia nhóm
                             </button>
                        ;
                        break;

                    case 0: // Member (Thành viên)
                    case 1: // Admin (Quản trị viên)
                            <button onclick="leaveGroup('@Model.ID')"
                                    class="bg-red-600 text-white py-2 px-6 rounded-full hover:bg-red-700 transition-colors">
                                Rời nhóm
                            </button>
                        ;
                        break;

                    case 2: // Owner (Chủ nhóm)
                            <button onclick="deleteGroup('@Model.ID')"
                                    class="bg-red-600 text-white py-2 px-6 rounded-full hover:bg-red-700 transition-colors ml-2">
                                Xóa nhóm
                            </button>
                        ;
                        break;

                    default: // Không phải thành viên (Role khác -1, 0, 1, 2)
                             <button onclick="handleGroupAction('@Model.ID', 'POST', '@(Model.IsPrivate ? "Yêu cầu tham gia đã được gửi" : "Đã tham gia nhóm")')"
                                     class="bg-blue-500 text-white py-2 px-6 rounded-full hover:bg-blue-600 transition-colors">
                                 Tham gia nhóm
                             </button>
                        ;
                        break;
                }
            </div>
        </div>
    </div>

    @* Khung đăng bài chỉ hiển thị nếu người dùng là thành viên *@
    @if (Model.IsMember)
    {
        <div class="bg-white rounded-xl shadow-sm md:p-4 p-2 space-y-4 text-sm font-medium border1">
            <div class="flex items-center md:gap-3 gap-1">
                <div class="flex-1 bg-slate-100 hover:bg-opacity-80 transition-all rounded-lg cursor-pointer" uk-toggle="target: #create-status">
                    <div class="py-2.5 text-center">Bạn đang nghĩ gì?</div>
                </div>
                <div class="cursor-pointer hover:bg-opacity-80 p-1 px-1.5 rounded-xl transition-all bg-pink-100/60 hover:bg-pink-100" uk-toggle="target: #create-status">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 stroke-pink-600 fill-pink-200/70" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M15 8h.01" />
                        <path d="M12 3c7.2 0 9 1.8 9 9s-1.8 9 -9 9s-9 -1.8 -9 -9s1.8 -9 9 -9z" />
                        <path d="M3.5 15.5l4.5 -4.5c.928 -.893 2.072 -.893 3 0l5 5" />
                        <path d="M14 14l1 -1c.928 -.893 2.072 -.893 3 0l2.5 2.5" />
                    </svg>
                </div>
            </div>
        </div>
    }

    @* Vùng hiển thị bài viết *@
    @if (Model.IsPrivate && Model.IsMember || !Model.IsPrivate)
    {
        <div id="posts-container" style="width:580px" class="space-y-4 mt-6">
            @if (Model.RecentPosts != null && Model.RecentPosts.Any())
            {
                foreach (var post in Model.RecentPosts)
                {
                    @await Html.PartialAsync("_Post", post, new ViewDataDictionary(ViewData) { { "ShowAllComment", true } })
                }
            }
            else
            {
                <p class="text-center text-gray-500">Nhóm này chưa có bài viết nào.</p>
            }
        </div>
    }
    else if (Model.IsPrivate && Model.CurrentUserRole == -1)
    {
        <p class="text-center text-gray-500 mt-6 p-4 bg-white rounded-xl shadow-sm">Bạn đã gửi yêu cầu tham gia. Bài viết sẽ hiển thị sau khi yêu cầu được duyệt.</p>
    }
    else if (Model.IsPrivate && Model.CurrentUserRole == 3) // Không phải thành viên và là nhóm riêng tư
    {
        <p class="text-center text-gray-500 mt-6 p-4 bg-white rounded-xl shadow-sm">Đây là nhóm riêng tư. Vui lòng tham gia để xem nội dung.</p>
    }

    @* Các Partial View cho Modal *@
    <partial name="/Views/Home/_CreateStatus.cshtml" model="new PostVM { GroupID = Model.ID };" />
    <partial name="/Views/Home/_PostDeleteConfirmation.cshtml" />
    <partial name="/Views/Home/_EditStatus.cshtml" model="new PostEditVM()" />
    <partial name="_GroupMembersModal" model="new List<GroupMemberList>()" />
</div>

@section Scripts {
    <script>
        // Các hàm quản lý Toastify và Modal (giữ nguyên)
        // Lưu ý: Các hàm kickMember, toggleAdmin, approveMember, rejectMember được đặt ở đây
        // vì chúng cần biến currentGroupId và showToast, và có thể được gọi từ modal (được tải động).

        // --- Toastify ---
        function showToast(message, isSuccess) {
            if (typeof Toastify === 'function') {
                Toastify({
                    text: message,
                    duration: 3000,
                    gravity: "top",
                    position: "center",
                    backgroundColor: isSuccess ? "#4CAF50" : "#f44336"
                }).showToast();
            } else {
                alert(message);
            }
        }

        // --- Tham gia / Hủy yêu cầu tham gia ---
        function handleGroupAction(groupId, method, successMessage) {
            let actionText = (method === 'POST') ? 'tham gia' : 'hủy yêu cầu';
            if (!confirm(`Bạn có chắc chắn muốn ${actionText} nhóm này không?`)) return;

            let url = (method === 'POST') ? '/GroupMember/JoinGroup' : '/GroupMember/LeaveGroup';

            fetch(url, {
                method: method,
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(parseInt(groupId))
            })
            .then(res => res.json())
            .then(data => {
                showToast(data.mess || successMessage, data.status === 1);
                if (data.status === 1) setTimeout(() => window.location.reload(), 800);
            })
            .catch(() => showToast("Đã xảy ra lỗi hệ thống.", false));
        }

        // --- Rời nhóm ---
        function leaveGroup(groupId) {
            if (!confirm("Bạn có chắc chắn muốn rời nhóm này không?")) return;
            fetch('/GroupMember/LeaveGroup', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(parseInt(groupId))
            })
            .then(res => res.json())
            .then(data => {
                showToast(data.mess || "Rời nhóm thành công!", data.status === 1);
                if (data.status === 1) setTimeout(() => window.location.href = '/Group', 800); // Chuyển hướng về trang danh sách nhóm
            })
            .catch(() => showToast("Đã xảy ra lỗi hệ thống khi rời nhóm.", false));
        }

        // --- Xóa nhóm (Chỉ Chủ nhóm) ---
        function deleteGroup(groupId) {
            if (!confirm("Bạn có chắc chắn muốn xóa nhóm này không? Thao tác này không thể hoàn tác!")) return;
            fetch('/Group/DeleteGroup', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(parseInt(groupId))
            })
            .then(res => res.json())
            .then(data => {
                showToast(data.mess || "Nhóm đã được xóa thành công!", data.status === 1);
                if (data.status === 1) setTimeout(() => window.location.href = '/Group/Index', 800);
            })
            .catch(() => showToast("Đã xảy ra lỗi hệ thống khi xóa nhóm.", false));
        }

        // --- Modal thành viên ---
        async function openMembersModal(groupId, currentUserRole) {
            try {
                // Tải nội dung modal từ controller
                const res = await fetch(`/GroupMember/ShowMembersModal?groupId=${groupId}&currentUserRole=${currentUserRole}`);
                if (!res.ok) throw new Error(`HTTP Error: ${res.status}`);

                const html = await res.text();

                // Xóa modal cũ nếu tồn tại và thêm modal mới
                document.getElementById('groupMembersModal')?.remove();
                document.body.insertAdjacentHTML('beforeend', html);

                // Hiển thị modal (Giả sử modal sử dụng UIkit hoặc Tailwind class 'flex' để hiển thị)
                const modalElement = document.getElementById('groupMembersModal');
                if (modalElement) {
                     // Dùng hàm show của UIkit nếu có, hoặc chỉ cần remove 'hidden'
                     if (typeof UIkit !== 'undefined') {
                         UIkit.modal(modalElement).show();
                     } else {
                         modalElement.classList.remove('hidden');
                         modalElement.classList.add('flex', 'fixed', 'inset-0', 'bg-black/50', 'z-50', 'items-center', 'justify-center');
                     }
                }
            } catch (error) {
                showToast("Lỗi tải danh sách thành viên.", false);
                console.error("Lỗi tải danh sách thành viên:", error);
            }
        }

        // Hàm đóng modal được gọi từ bên trong modal (ví dụ: nút đóng)
        function closeMembersModal() {
             const modal = document.getElementById('groupMembersModal');
             if (modal && typeof UIkit !== 'undefined') {
                 UIkit.modal(modal).hide();
             } else if (modal) {
                 modal.classList.add('hidden');
                 modal.classList.remove('flex', 'fixed', 'inset-0', 'bg-black/50', 'z-50', 'items-center', 'justify-center');
             }
        }

        // --- JS cho các hành động trong modal quản lý thành viên ---
        const currentGroupId = @Model.ID;

        // Kick thành viên
        function kickMember(userId) {
            if (!confirm("Bạn có chắc muốn kick thành viên này ra khỏi nhóm không?")) return;
            fetch(`/GroupMember/DeleteMember?groupId=${currentGroupId}&memberId=${userId}`, {
             method: 'DELETE'
            })
            .then(res => res.json())
            .then(data => {
                showToast(data.mess || (data.status === 1 ? "Đã kick thành viên thành công." : "Không thể kick thành viên."), data.status === 1);
                if (data.status === 1) location.reload();
            })
            .catch(() => showToast("Đã xảy ra lỗi hệ thống.", false));
        }

        // Thay đổi quyền Admin
        function toggleAdmin(userId, currentRole) {
            const isAdmin = currentRole.toLowerCase() === 'admin';
            const url = isAdmin ? '/GroupMember/RemoveAdmin' : '/GroupMember/AddAdmin';
            const confirmMsg = isAdmin ? 'Gỡ quyền admin cho người này?' : 'Thêm quyền admin cho người này?';

            if (confirm(confirmMsg)) {
                fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ groupId: currentGroupId, userId: userId })
                })
                .then(res => res.json())
                .then(data => {
                    showToast(data.mess || (data.status === 1 ? "Cập nhật quyền thành công." : "Không thể thực hiện."), data.status === 1);
                    if (data.status === 1) location.reload();
                })
                .catch(() => showToast("Đã xảy ra lỗi hệ thống.", false));
            }
        }

        // Duyệt thành viên
        function approveMember(userId) {
            if (!confirm("Bạn có chắc chắn muốn duyệt yêu cầu này?")) return;
            fetch('/GroupMember/ApproveJoin', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ groupId: currentGroupId, userId: userId })
            })
            .then(res => res.json())
            .then(data => {
                showToast(data.mess || (data.status === 1 ? "Đã duyệt thành viên thành công." : "Không thể duyệt."), data.status === 1);
                if (data.status === 1) location.reload();
            })
            .catch(() => showToast("Đã xảy ra lỗi hệ thống.", false));
        }

        // Từ chối thành viên
        function rejectMember(userId) {
            if (!confirm("Bạn có chắc chắn muốn từ chối yêu cầu này?")) return;
            fetch('/GroupMember/RejectJoin', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ groupId: currentGroupId, userId: userId })
            })
            .then(res => res.json())
            .then(data => {
                showToast(data.mess || (data.status === 1 ? "Đã từ chối yêu cầu thành công." : "Không thể từ chối."), data.status === 1);
                if (data.status === 1) location.reload();
            })
            .catch(() => showToast("Đã xảy ra lỗi hệ thống.", false));
        }
    </script>
}